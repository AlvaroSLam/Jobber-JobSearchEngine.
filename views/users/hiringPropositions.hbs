{{#each offerData}}
<h4 style="text-align: center;">JOB OFFER</h4>
<ul class="list-group">
<form method = "POST" action="/employerProfile/hiringPropositions/{{this._id}}/delete">
<li class="list-group-item"> <strong>Employee Name: </strong> {{this.employeeId.nameEmployee}}</li>
<li class="list-group-item"><strong>Offer Status: </strong> {{this.status}}</li>
<li class="list-group-item"><strong>Message: </strong><br><br>{{this.offerMessage}}</li>
{{#if this.isAccepted}}
<li class="list-group-item"><strong>Email: </strong>{{this.employeeId.emailEmployee}}</li>
{{else}}
<li class="list-group-item"><button type="submit" class="btn btn-primary" id="btns">DELETE OFFER</button></li>
{{/if}}
</ul></form>
<hr>
<br></br>
{{/each}}


  
 